layout :admin, :name => 'admin', :title => 'Site Administration', 
  :subtitle => 'Click on a link or image below to edit it.',
  :styles => %w( base admin quick_add ), :scripts => %w( base admin quick_add ) do
  div.main do
    div.site.panel do
      h2 'Site Properties'
      view( :site, :editor )
    end
    div.stories.panel do
      h2 'Stories'
      view( :story, :list, :stories => all(:story) )
    end
    div.images.panel do
      h2 'Images'
      view( :image, :list, :images => all(:image) )
    end
	div.events.panel do
      h2 'Events'
      view( :event, :list, :events => all(:event) )
    end
	div.blogs.panel do
      h2 'Blogs'
      view( :blog, :list, :blogs => all(:blog) )
    end
    div.galleries.panel do
      h2 'Galleries'
      view( :gallery, :list, :galleries => all(:gallery) )
    end
	div.calendars.panel do
      h2 'Calendars'
      view( :calendar, :list, :calendars => all(:calendar) )
    end
  end
end
